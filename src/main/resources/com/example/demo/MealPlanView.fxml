                    <Label text="Breakfast" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                    <Label text="Snack" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
                    <Label text="Lunch" GridPane.halignment="CENTER" GridPane.rowIndex="7" />
                    <Label text="Snack" GridPane.halignment="CENTER" GridPane.rowIndex="10" />

                    <!-- Image Views for Meals -->
                    <ImageView fx:id="imageViewBreakfastMonday" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <ImageView fx:id="imageViewBreakfastTuesday" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                    <ImageView fx:id="imageViewBreakfastWednesday" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="3" GridPane.rowIndex="2" />
